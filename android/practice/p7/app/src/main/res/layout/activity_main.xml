<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_view_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="你会什么开发?"/>


    <CheckBox
        android:id="@+id/check_box_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="android"
        android:textSize="15dp"
        android:textColor="#FF0000"
        android:layout_below="@id/text_view_1"/>


    <CheckBox
        android:id="@+id/check_box_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="linux c++"
        android:layout_below="@id/check_box_1" />
    <CheckBox
        android:id="@+id/check_box_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/check_box"
        android:text="windows c++"
        android:layout_below="@id/check_box_2"/>n
    <CheckBox
        android:id="@+id/check_box_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/check_box"
        android:text="代码观察师"
        android:layout_below="@id/check_box_3"/>



</RelativeLayout>